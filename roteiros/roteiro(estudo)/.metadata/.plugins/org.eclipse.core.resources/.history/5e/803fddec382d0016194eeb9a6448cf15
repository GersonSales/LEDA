package algoritmos;

public class Ordenador<E extends Comparable<E>> {
    public void bubbleSort(E[] lista) {
        boolean houveTroca;
        do {
            houveTroca = false;
            int ultimoOrdenado = lista.length - 1;
            for (int i = 0; i < lista.length - 1; i ++ ) {
                if (lista[i].compareTo(lista[i + 1]) > 0) {
                    E aux = lista[i];
                    lista[i] = lista[i + 1];
                    lista[i + 1] = aux;
                    houveTroca = true;
                    ultimoOrdenado--;
                }
                
                
            }
            
        }while(houveTroca);
    }
    
    
    public void imprimeLista(E[] lista) {
        System.out.print("[");
        for (E e : lista) {
            System.out.print(e + ", ");
        }
        System.out.println("]");
    }
}